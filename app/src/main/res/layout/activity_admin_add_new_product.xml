<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddNewProductActivity">
    <ImageView
        android:id="@+id/p_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image"
        android:adjustViewBounds="true"
        android:maxHeight="170dp"
        android:maxWidth="250dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/t_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/p_image"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:hint="Product name..."
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/inputs"
        />
    <EditText
        android:id="@+id/t_product_descript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_product_name"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:hint="Product description..."
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/inputs"
        />
    <EditText
        android:id="@+id/t_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_product_descript"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        android:padding="20dp"
        android:hint="Product Price"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/inputs"
        />
    <EditText
        android:id="@+id/t_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_price"
        android:layout_marginTop="10dp"
        android:inputType="numberDecimal"
        android:padding="20dp"
        android:hint="Product Amount"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/inputs"
        />
    <Button
        android:id="@+id/btn_add_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_amount"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Add Product"
        android:background="@drawable/buttons"/>

</RelativeLayout>